@model InvestigationFormViewModel

@using cis2055_nemesys.Models.Enums
@using cis2055_nemesys.Helpers

@{
    ViewData["Title"] = "Edit Investigation";
}

<section class="section">
    <div class="section__header">
        <h5 class="section__title">
            @ViewData["Title"]
            for Report
            <span class="text-light">
                #@Model.ReportId
            </span>
        </h5>
    </div>

    <form class="wrapper" asp-action="Edit" method="post" role="form">
        <input type="hidden" asp-for="ReportId" value="@Model.ReportId" />

        <div class="form-section">
            <div class="form-section__header">
                <div class="form-section__header--title">Investigation information</div>
                <div class="form-section__header--note">Provide the date and time of the action and description.</div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ActionDate" class="form-label">Action Date</label>
                        <input type="date" asp-for="ActionDate" class="form-control" value="@Model.ActionDate">
                        <span asp-validation-for="ActionDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ActionTime" class="form-label">Action Time</label>
                        <input type="time" asp-for="ActionTime" class="form-control" value="@Model.ActionTime">
                        <span asp-validation-for="ActionTime" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea class="form-control" asp-for="Description" placeholder="...">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-section">
            <div class="form-section__header">
                <div class="form-section__header--title">Report</div>
                <div class="form-section__header--note">Set the report status.</div>
            </div>

            <div class="mb-3">
                <label asp-for="ReportStatus" class="form-label">Status</label>
                <select class="form-control" asp-for="ReportStatus">
                    @foreach (ReportStatus state in Enum.GetValues(typeof(ReportStatus)))
                    {
                        <option value="@state">
                            @ReportStatusHelper.TranslateReportStatus(state)
                        </option>
                    }
                </select>
                <span asp-validation-for="ReportStatus" class="text-danger"></span>
            </div>
        </div>

        <div class="form-section__footer">
            <button type="submit" class="btn btn-primary">Update Invstigation</button>
        </div>
    </form>
</section>
